<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.DishMapper">
    <select id="conditionQueryDish" resultType="com.itheima.pojo.Dish">
        select id, dishname, dishimage, price, remain, intro from menu
        where
            dishname like concat('%',#{dishName},'%')
    </select>
</mapper>